---
layout: base
class: books
---

<ul class="books-list">
    {% for book in collections.books %}
    <li class="book">
        <section class="book--image">
            <img src="{{book.data.featured_image.image}}" alt="{{book.data.featured_image.alt}}">
        </section>
        <section class="book--copy">
            <h2 class="book--title">
                {{book.data.title}}
            </h2>
            <div class="book--text">
                {{book.data.intro}}
            </div>

        </section>
    </li>
    {% endfor %}
</ul>