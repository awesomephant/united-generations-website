<li class="card book-card">
    <span class="card--eyebrow">{{book.data.date | date: "%Y"}}</span>
    {% if book.data.featured_image.image and book.data.featured_image.image != "" %}
    <section class="card--image">
        <a {% if book.data.link.url !="" %}href="{{book.data.link.url}}" {%endif%}
        {% if size == "small" %}style="background-image: url({{book.data.featured_image.image}}?nf_resize=fit&w=500&h=300)"{% else %}
        style="background-image: url({{book.data.featured_image.image}}?nf_resize=fit&w=1000)" {% endif %}>
            <span class="sr">
                {{item.data.featured_image.alt}}
            </span>
        </a>
    </section>
    {% endif %}
    <h2 class="card--title">
        {{book.data.title}}
    </h2>
    <div class="card--copy">
        {{book.data.intro}}
    </div>
    <div class="card--data">
        {% if book.data.link %}
        <a class="btn active" href="{{book.data.link.url}}">
            {{book.data.link.text}}
        </a>
        {% endif %}
    </div>
</li>