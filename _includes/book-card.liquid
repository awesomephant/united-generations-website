<li class="card book-card">
    <section class="card--image">
        <img src="{{book.data.featured_image.image}}" alt="{{book.data.featured_image.alt}}">
    </section>
    <h2 class="card--title">
        {{book.data.title}}
    </h2>
    <div class="card--copy">
        {{book.data.intro}}
    </div>
    <div class="card--data">
        <a class="btn active" href="#1">Order from Amazon</a>
    </div>
</li>