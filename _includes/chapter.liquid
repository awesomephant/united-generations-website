---
layout: base
class: research single-research
---

<header class="post--header">
    <p class="post--eyebrow">
        {{content | readingTime }} min read
    </p>
    {% if featured_image %}
    <img class="post--thumbnail" src="{{featured_image.image}}" alt="{{item.data.featured_image.alt}}">
    {% endif %}
    <h2 class="post--title">{{title}}</h2>
    {% if introduction != "" %}
    <section class="post--intro">
        {{introduction}}
    </section>
    {% endif %}
</header>

<nav class="chapter--nav">
    <div class="chapter--nav-inner">
        <h3 class="chapter--nav-title"><a href="/research">Chapters</a></h3>
        <ul>
            {% for item in collections.research %}
            <li {% if item.data.title==title%}class="current" {%endif%}>
                <a href="{{item.url}}">
                    <span class="index">0{{forloop.index}}</span>{{item.data.title}}
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</nav>
<main class="post--content">
    {{content}}
</main>